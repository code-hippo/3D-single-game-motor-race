//declaration of material data of the object
struct matprop
{

float res;
float myu;
};


//bike object related data and functions
class Object
{
public:
	terrain *_Terrain;
	float terrainlfactor;
	reader *model;


    float timeaccumulator;
	vector3f pos;
	int posX;
